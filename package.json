{
    "name": "my-copilot",
    "displayName": "my-copilot",
    "description": "Simple extension with Azure OpenAI APIs to simulate the fuctions of GitHub Copilot",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.77.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:my-copilot.askQuestion",
        "onView:my-copilot-sidebar-view",
        "onCommand:my-copilot.sendCodeCompletionReqest",
        "onCommand:my-copilot.getCodeCompletionResult"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "my-copilot-sidebar-view",
                    "title": "My Copilot",
                    "icon": "media/pulse.svg"
                }
            ]
        },
        "views": {
            "my-copilot-sidebar-view": [
                {
                    "type": "webview",
                    "id": "my-copilot-sidebar",
                    "name": "Chat",
                    "icon": "media/pulse.svg",
                    "contextualTitle": "MyCopilot"
                }
            ]
        },
        "commands": [
            {
                "command": "my-copilot.askQuestion",
                "category": "my-copilot",
                "title": "Ask Question"
            },
            {
                "command": "my-copilot.sendCodeCompletionReqest",
                "category": "my-copilot",
                "title": "Send Code Completion Request"
            },
            {
                "command": "my-copilot.getCodeCompletionResult",
                "category": "my-copilot",
                "title": "Get Code Completion Result"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "webpack",
        "watch": "concurrently \"rollup -c -w\" \"webpack --mode development --watch\"",
        "package": "webpack --mode production --devtool hidden-source-map",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "npm run compile-tests && npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@rollup/plugin-commonjs": "^24.0.1",
        "@rollup/plugin-node-resolve": "^15.0.1",
        "@rollup/plugin-typescript": "^11.0.0",
        "@tsconfig/svelte": "^3.0.0",
        "@types/glob": "^8.0.0",
        "@types/mocha": "^10.0.1",
        "@types/node": "16.x",
        "@types/node-fetch": "^2.6.3",
        "@types/polka": "^0.5.4",
        "@types/vscode": "^1.74.0",
        "@typescript-eslint/eslint-plugin": "^5.45.0",
        "@typescript-eslint/parser": "^5.45.0",
        "@vscode/test-electron": "^2.2.0",
        "concurrently": "^7.6.0",
        "eslint": "^8.28.0",
        "glob": "^8.0.3",
        "mocha": "^10.1.0",
        "node-fetch": "^3.3.1",
        "rollup": "^2.3.4",
        "rollup-plugin-svelte": "^6.0.0",
        "rollup-plugin-terser": "^7.0.0",
        "svelte": "^3.55.1",
        "svelte-check": "^3.0.3",
        "svelte-preprocess": "^5.0.1",
        "ts-loader": "^9.4.1",
        "typescript": "^4.9.3",
        "webpack": "^5.75.0",
        "webpack-cli": "^5.0.0"
    },
    "dependencies": {
        "polka": "^0.5.2"
    }
}
